<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_level"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/level_background"
                android:padding="5dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- FrameLayout to overlay progress bars -->
            <FrameLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Current progress bar -->
                <ProgressBar
                    android:id="@+id/level_progress_current"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="265dp"
                    android:layout_height="17dp"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/custom_progress_bar_current" />

                <!-- Additional progress bar -->
                <ProgressBar
                    android:id="@+id/level_progress_additional"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="265dp"
                    android:layout_height="17dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/custom_progress_bar_additional" />
            </FrameLayout>

            <TextView
                android:id="@+id/next_level"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/level_background"
                android:padding="5dp"
                android:text="2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/next_lvl"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="NEXT LEVEL!"
                android:textColor="@color/level_active_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xp_gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1000xp"
                android:textColor="@color/level_active_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cash_gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1230$"
                android:textColor="@color/level_active_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stan konta: -11230$"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/arrival_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Przylot: 23:12"
                android:textColor="@color/level_active_color"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:text="Anuluj"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/ok_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Ok"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>